<table class="ui celled table">
  <thead>
    <tr>
      <th>Date/Time</th>
      <th>Code</th>
      <th>Temperature</th>
      <th>WindSpeed</th>
      <th>WindDirection</th>
      <th>Pressure</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each station.readings}}
      <tr>
        <td>
        {{date}}
        </td>
        <td>
          {{code}}
        </td>
        <td>
          {{temp}}
        </td>
        <td>
          {{windspeed}}
        </td>
        <td>
          {{winddirection}}
        </td>
        <td>
          {{pressure}}
        </td>
        <td>
          <a href="/station/{{../station.id}}/deletereading/{{id}}" class="ui icon button">
            <i class="icon trash "></i>
          </a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

